@model Gestionale.Models.Utente

@{
    ViewBag.Title = "Login";
}

@if (ViewBag.ErrorAutentication != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorAutentication
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @*<div class="form-horizontal">
        <h4>Login</h4>
        <hr />*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form"style="margin-left:110px">
        <div class="title">Benvenuto</div>
        <div class="subtitle">Il tuo account!</div>
        <div class="input-container mt-4">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label text-white" })

            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control input" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

        </div>

        <div class="input-container mt-4">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label text-white" })

            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control input", @type = "password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <div>
            <input type="submit" value="Login" class="submit" />
        </div>

    </div>








}

