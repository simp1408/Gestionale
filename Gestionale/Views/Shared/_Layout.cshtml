
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <!--sidebar -->
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Gest-Task</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="/Utente/SearchForm" class="nav-link align-middle px-0">
                                <i class="bi bi-search"></i> <span class="ms-1 d-none d-sm-inline">Cerca</span>
                            </a>
                        </li>
                        <li>
                            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Dipendeti<i class="bi bi-caret-down p-4 align-items-center"style="margin-left:34px;"></i></span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="/Utente/Create" class="nav-link px-0"> <span class="d-none d-sm-inline">Add Dipendente</span></a>
                                </li>
                                <li>
                                    <a href="/Utente/Dipendenti" class="nav-link px-0"> <span class="d-none d-sm-inline">Lista Dipendenti</span></a>
                                </li>

                            </ul>
                        </li>

                        <li>
                            <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle ">
                                <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Task<i class="bi bi-caret-down p-4 align-items-center"style="margin-left:75px;"></i></span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="/Task/CreateTask" class="nav-link px-0"> <span class="d-none d-sm-inline">Add Task</span></a>
                                </li>
                                <li>
                                    <a href="/Task/Index" class="nav-link px-0"> <span class="d-none d-sm-inline">Lista Task</span></a>
                                </li>
                                <li>
                                    <a href="/Task/ListaTask" class="nav-link px-0"> <span class="d-none d-sm-inline">La tua Task</span></a>
                                </li>

                            </ul>
                        </li>
                        <li>
                            <a href="#submenu4" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-grid"></i> <span class="ms-1 d-none d-sm-inline">Mansioni<i class="bi bi-caret-down p-4 align-items-center"style="margin-left:39px;"></i></span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu4" data-bs-parent="#menu">
                                <li>
                                    <a href="/MansionI/Create" class="nav-link px-0"> <span class="d-none d-sm-inline">Add Mansione</span></a>
                                </li>

                            </ul>
                        </li>
                        <li>
                            <a href="#submenu3" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-grid"></i> <span class="ms-1 d-none d-sm-inline">Note<i class="bi bi-caret-down p-4 align-items-center"></i></span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu3" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="/Home/Note" class="nav-link px-0"> <span class="d-none d-sm-inline">Add Note</span></a>
                                </li>

                            </ul>
                        </li>

                    @if (User.Identity.IsAuthenticated)
                    {

                         <div class="container d-flex gap-2 fs-4 mb-3 mt-xxl-5"> @User.Identity.Name
                        <a href="~/Home/Logout"><i class='bx bx-log-out'></i></a>
                            </div>

                    }
                    else
                    {

                            <div class="container d-flex gap-2 fs-4 mb-3 mt-xxl-5">Login
                            <a href="~/Home/Login"><i class='bx bx-log-in'></i></a>
                              </div>
                     }
           

    </ul>

        </div>
    </div>
    @*- fine sidebar*@
    <div class="container body-content">
                <div class="m-5">@RenderBody()</div>
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
                </footer>
            </div>

        </div>
    </div>
    <!--Javscript-->
   
   
    @RenderSection("scripts", required: false)
    <script>
     

    </script>
</body>
</html>
